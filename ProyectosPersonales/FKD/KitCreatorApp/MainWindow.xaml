<Window x:Class="KitCreatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitCreatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnSelectImage" Content="Seleccionar Imagen" Width="200" Height="40" Margin="0,0,0,10" Click="btnSelectImage_Click"/>
            <Button Name="btnCreateZip" Content="Crear ZIP" Width="200" Height="40" Click="btnCreateZip_Click"/>
            <TextBlock Name="txtStatus" Margin="0,20,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
